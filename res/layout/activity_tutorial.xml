<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tutorialScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow" >

    <RelativeLayout
        android:id="@+id/tutorialRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <GridLayout
            android:id="@+id/tutorialGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:rowCount="4"
            tools:context=".Tutorial" >

            <TextView
                android:id="@+id/tutorialText1"
                android:layout_width="480dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_gravity="top"
                android:layout_row="0"
                android:background="@drawable/back"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/tutorial1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tutorialText2"
                android:layout_width="480dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_gravity="top"
                android:layout_row="1"
                android:background="@drawable/back"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/tutorial2"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/tutorialView3"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="2"
                android:src="@drawable/swipe_feet_old" />

            <TextView
                android:id="@+id/tutorialText3"
                android:layout_width="480dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_gravity="top"
                android:layout_row="2"
                android:background="@drawable/back"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/tutorial3"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/tutorialView1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="0"
                android:src="@drawable/swipe_feet_black" />

            <ImageView
                android:id="@+id/tutorialView2"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="1"
                android:src="@drawable/head_swipe_old" />
        </GridLayout>
        
        <TextView
            android:id="@+id/tutorialText4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tutorialGrid"
            android:layout_gravity="top"
            android:background="@drawable/back"
			android:padding="20dp"
			android:layout_margin="16dp"
            android:text="@string/tutorial4"
            android:textSize="18sp" />

    </RelativeLayout>

</ScrollView>